{
    "compileOnSave": false,
    "compilerOptions": {
        "strict": true,
        "rootDir": ".",
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@aofg/backend-protocol": ["backend-protocol/src/index.ts"],
            "@aofg/configuration": ["configuration/src/index.ts"],
            "@aofg/protocol": ["protocol/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
