{
    "compileOnSave": false,
    "compilerOptions": {
        "strict": true,
        "rootDir": ".",
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2020", "dom"],
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@aofg/backend-protocol": ["lib/protocols/backend/src/index.ts"],
            "@aofg/configuration": ["lib/configuration/src/index.ts"],
            "@aofg/database": ["lib/database/src/index.ts"],
            "@aofg/guilds": ["lib/guilds/src/index.ts"],
            "@aofg/peoples": ["lib/peoples/src/index.ts"],
            "@aofg/protocol": ["lib/protocol/src/index.ts"],
            "@aofg/typeorm-ext": ["lib/typeorm-ext/src/index.ts"],
            "@aofg/work": ["lib/work/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
