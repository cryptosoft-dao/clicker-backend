{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug backend",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "nx",
            "runtimeArgs": [
                "serve",
                "backend",
                "--inspect"
            ],
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/*"
            ],
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        }
        // repeat for each debuggable app
    ]
}